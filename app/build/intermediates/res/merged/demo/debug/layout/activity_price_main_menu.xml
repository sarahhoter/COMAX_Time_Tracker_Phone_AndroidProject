<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:id="@+id/main"
    android:background="#ffffff"
    android:padding="10dp"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/btnScan"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/white_edit"
            android:text="@string/Play"
            android:textColor="#b1b1b1"
            android:textSize="16dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textColor="#444"
            android:ems="10"
            android:textSize="16dp"
            android:hint="@string/barcode2"
            android:textColorHint="#b1b1b1"
            android:id="@+id/barcode"
            android:background="@drawable/white_edit"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight=".85"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_edit"
        android:textSize="16dp"
        android:text="@string/Search"
        android:textColor="#b1b1b1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/our_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.8"
                >

                <TextView
                    android:id="@+id/barkod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:maxLines="2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/nis1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="right|center_vertical"
                        android:textColor="#b1b1b1"
                        android:textSize="16dp"
                        android:text="@string/nis"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="right|center_vertical"
                        android:textColor="#b1b1b1"
                        android:textSize="16dp"
                        android:text="100.00"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#b1b1b1"
                        android:textSize="16dp"
                        android:paddingRight="3dp"
                        android:text="במקום"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/nis2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="right|center_vertical"
                        android:textColor="#b1b1b1"
                        android:textSize="16dp"
                        android:text="@string/nis"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:lines="1"
                        android:layout_marginBottom="5dp"
                        android:gravity="right|center_vertical"
                        android:textColor="#b1b1b1"
                        android:textSize="16dp"
                        android:paddingRight="3dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/p"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="@string/sales_price"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:textColor="#b1b1b1"
                        android:paddingRight="3dp"/>

            </LinearLayout>
</LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/Red"
            android:textSize="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/imgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_marginBottom="10dp"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_big"
                android:layout_marginBottom="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                android:id="@+id/supplier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:textColor="#b1b1b1"
                android:textSize="16dp"
                android:visibility="gone"

                />

                </LinearLayout>
                <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.3"
             android:layout_gravity="right"
             android:gravity="right"
             android:orientation="vertical" >

             <TextView
                android:id="@+id/sup"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:visibility="gone"
                android:gravity="right"
                android:text="@string/supplier"
                android:textSize="16dp"
                android:textColor="#b1b1b1"/>
        </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                     android:layout_width="0dp"
                     android:layout_weight="0.70"
                     android:layout_height="wrap_content"
                     android:layout_gravity="right"
                     android:gravity="right"
                     android:orientation="vertical" >

                     <TextView
                         android:id="@+id/department"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginBottom="3dp"
                         android:gravity="right"
                         android:textColor="#b1b1b1"
                         android:textSize="16dp"
                         android:visibility="gone" />

                     <TextView
                         android:id="@+id/group"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginBottom="3dp"
                         android:gravity="right"
                         android:textColor="#b1b1b1"
                         android:textSize="16dp"
                         android:visibility="gone"

                     />

                     <TextView
                         android:id="@+id/subgroup"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginBottom="3dp"
                         android:gravity="right"
                         android:textColor="#b1b1b1"
                         android:textSize="16dp"
                         android:visibility="gone"

                     />

                     <TextView
                         android:id="@+id/unit_price"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginBottom="3dp"
                         android:gravity="right"
                         android:textColor="#b1b1b1"
                         android:textSize="16dp"
                         android:visibility="gone" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                android:id="@+id/dep"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="@string/departmentPrt"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="#b1b1b1"
                android:layout_marginBottom="3dp"
                />
                    <TextView
                android:id="@+id/grp"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/groupPrt"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="#b1b1b1"/>
                    <TextView
                android:id="@+id/subgrp"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/subgroup"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="#b1b1b1"/>
                    <TextView
                android:id="@+id/up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/sales_price"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="#b1b1b1"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#b1b1b1"
            android:textSize="16dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:id="@+id/sale_nm_title"
            android:paddingBottom="5sp"
            android:text="@string/mivzaim"/>

        <ListView
            android:id="@+id/sale_nm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="#b1b1b1"
            android:textSize="16dp" />
    </LinearLayout>

    </LinearLayout>

