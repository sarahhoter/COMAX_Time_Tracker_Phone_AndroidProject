<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/g_LayoutButton1"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/action_bar"
        layout="@layout/view_action_bar"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                android:textColor="#555"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/date_no_title"/>

                <TextView
                android:textColor="#555"
                android:textSize="17dp"
                android:paddingTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hour"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:textColor="#555"
                    android:textSize="17dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/bg_border_bottom_medium_gray"
                    android:id="@+id/treatment_date"
                    android:layout_width="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#555"
                    android:textSize="17dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/bg_border_bottom_medium_gray"
                    android:id="@+id/hour"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <Button
             android:id="@+id/next"
             android:layout_width="match_parent"
             android:text="@string/next"
             android:gravity="center|center_vertical"
             android:layout_margin="75dp"
             android:textColor="#555"
             android:textSize="17dp"
             android:layout_height="wrap_content"
             android:padding="3dp"
             android:background="@drawable/white_button"
             android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>




