<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" >
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->


    </style>

    <!-- Application theme. -->
    <!--<style name="AppTheme" ">-->
        <!--&lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;-->

    <!--</style>-->
    <!-- Application theme. -->


    <declare-styleable name="ListViewMaxHeight">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionMenuTextAppearance">@style/ActionMenuStyle</item>
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

    </style>

    <style name="ActionMenuStyle" parent="Theme.AppCompat.Base.CompactMenu">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="spinnerItemStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#555</item>
    </style>
    <style name="popupMenuStyle" parent="Theme.AppCompat.Base.CompactMenu">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>

        <!--<item name="android:layout_alignParentRight">true</item>-->
        <!--<item name="android:layout_gravity">right</item>-->
        <!--<item name="android:gravity">right</item>-->
        <!--<item name="android:direction">right_to_left</item>-->


    </style>


    <style name="BinaEditTextStyle" parent="@android:style/Widget.EditText">

        <!-- <item name="android:textColorHint">#FF00FF</item> -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
<style name="title" parent="title">
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:direction">right_to_left</item>

</style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="PopUpAnimation">
        <item name="android:windowEnterAnimation">@anim/right_slide_in</item>
        <item name="android:windowExitAnimation">@anim/right_slide_out</item>
    </style>
</resources>